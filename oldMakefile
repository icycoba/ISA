# Autor: Martin Hlinský (xhlins01)
# Projekt: Síťové aplikace a správa sítí - Čtečka novinek ve formátu Atom a RSS s podporou TLS

.PHONY: all clean

BIN=feedreader
OBJFILES=$(BIN).o

CXX=g++
CFLAGS= -Wall

all: $(BIN)

$(BIN):
	g++ -std=c++17 -I/usr/include/libxml2 -I/usr/local/include/libxml2 -g -o feedreader feedreader.cc -lssl -lcrypto -lxml2

clean: $(BIN)
	rm $(BIN)